{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};Include Error Detail=true"
  },
  "Redis": {
    "ConnectionString": "${REDIS_HOST}:${REDIS_PORT},password=${REDIS_PASSWORD}"
  },
  "RabbitMQ": {
    "Host": "${RABBITMQ_HOST}",
    "Port": "${RABBITMQ_PORT}",
    "Username": "${RABBITMQ_USER}",
    "Password": "${RABBITMQ_PASSWORD}",
    "VirtualHost": "/"
  },
  "Authentication": {
    "Keycloak": {
      "Authority": "${KEYCLOAK_AUTHORITY}",
      "Audience": "catalog-service",
      "RequireHttpsMetadata": true,
      "ValidateAudience": true,
      "ValidateIssuer": true
    }
  },
  "Cors": {
    "AllowedOrigins": ["${FRONTEND_URL}"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["*"],
    "AllowCredentials": true
  },
  "HealthChecks": {
    "UI": {
      "Path": "/health-ui"
    }
  },
  "Swagger": {
    "Title": "Catalog Service API",
    "Version": "v1",
    "Description": "API para gerenciamento de cat√°logo de produtos"
  }
}
