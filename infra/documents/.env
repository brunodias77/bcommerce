# .env
# =====================================================
# E-COMMERCE MICROSERVICES ENVIRONMENT CONFIGURATION
# =====================================================

# Environment
ENVIRONMENT=development
COMPOSE_PROJECT_NAME=ecommerce

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=postgres

# Redis Configuration  
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=ecommerce

# Keycloak Configuration
KEYCLOAK_HOST=keycloak
KEYCLOAK_PORT=8080
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KEYCLOAK_REALM=ecommerce
KEYCLOAK_CLIENT_ID=ecommerce-api
KEYCLOAK_CLIENT_SECRET=ecommerce-api-secret-2024

# Elasticsearch Configuration
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# Monitoring Configuration
PROMETHEUS_HOST=prometheus
PROMETHEUS_PORT=9090
GRAFANA_HOST=grafana
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# Jaeger Configuration
JAEGER_HOST=jaeger
JAEGER_PORT=16686
JAEGER_GRPC_PORT=14250
JAEGER_HTTP_PORT=14268

# MinIO Configuration
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# PgAdmin Configuration
PGADMIN_HOST=pgadmin
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@ecommerce.local
PGADMIN_PASSWORD=admin123

# Service Ports (for when microservices are implemented)
API_GATEWAY_PORT=8081
IDENTITY_SERVICE_PORT=5001
CATALOG_SERVICE_PORT=5002
INVENTORY_SERVICE_PORT=5003
ORDER_SERVICE_PORT=5004
PAYMENT_SERVICE_PORT=5005
NOTIFICATION_SERVICE_PORT=5006

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=3600

# CORS Configuration
CORS_ORIGINS=http://localhost:4200,http://localhost:3000,http://localhost:8081

# Logging Configuration
LOG_LEVEL=Information
SERILOG_MINIMUM_LEVEL=Information

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=10

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100

# File Storage
FILE_STORAGE_PROVIDER=MinIO
FILE_STORAGE_BUCKET=ecommerce-files
MAX_FILE_SIZE_MB=10

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@ecommerce.local

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Payment Provider Configuration
# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# MercadoPago
MERCADOPAGO_CLIENT_ID=your_mercadopago_client_id
MERCADOPAGO_CLIENT_SECRET=your_mercadopago_client_secret
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token

# Application URLs
API_BASE_URL=http://localhost:8081
FRONTEND_URL=http://localhost:4200
KEYCLOAK_URL=http://localhost:8080

# Security
ENCRYPT_KEY=your-encryption-key-32-characters
HASH_SALT=your-hash-salt